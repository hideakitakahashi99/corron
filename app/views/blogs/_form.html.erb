


                <%= form_for(@blog) do |f| %>
                <% if @blog.errors.any? %>
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @blog.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <% end %>
                <div class="row contact-sction">
                    <div class="col-md-8 col-md-offset-2">
                        <div class="contact-form">
                            <form action="" method="post">
                                <div class="name">
                                <%= f.text_field :title, :id => "name", :class => "form-control", :placeholder => "タイトル", :size => "50" %>

                                </div>

<div>
  <%= image_tag @blog.blogimage.thumb.url if @blog.blogimage? %>
  <%= f.file_field :blogimage, :class => "form-control" %> 
  <%= f.hidden_field :blogimage_cache %>
 </div><br>

                                <div class="message">
                                <%= f.text_area :content, :id => "message", :class => "form-control", :size => "80x10", :placeholder => "ブログ本文をご記入ください。（改行可）"%>
                                </div>

                                <div class="message">
                                <%= f.label :label_list, "タグ（カンマ区切り）" %><br>
                                <%= text_field_tag 'blog[label_list]', @blog.label_list.join(','), :class => "form-control" %>

                                </div>


<br>
                                <div class="submit text-center">
                                    <%= f.submit 'ブログ作成', :class => "submit" %>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <% end %>
   